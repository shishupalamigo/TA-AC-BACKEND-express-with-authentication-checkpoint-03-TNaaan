<%- include('partials/header') %>
<main class="px-12">
    <section>
        <div>
            <h1 class="text-4xl font-bold text-center mt-8">Savings for the Month of <%= currentMonth %>: <span class="text-red-500"><%= savings %></span></h1>
        </div>
        </section>
        <section class="flex justify-around">        
        <div class="flex my-8 flex-col w-1/3 items-center">
            <form action="/clients/statementList/filterByDate" method="GET" class="flex flex-col p-8 border-2 border-gray-300 rounded-lg mb-10">
                <h2 class="my-1 text-xl font-bold">Filter By Date</h2>
                <input type="date" name="startDate" class="p-2 bg-gray-200 my-1 rounded-lg border-2 border-gray-300">
                <input type="date" name="endDate" class="p-2 bg-gray-200 my-1 rounded-lg border-2 border-gray-300">
                <input type="submit" value="Search" class="p-2 bg-blue-500 text-white font-bold my-1 rounded-lg hover:bg-blue-400">
            </form>
           
            <form action="/clients/statementList/filterByMonth" method="get" class="flex flex-col p-8 border-2 border-gray-300 rounded-lg mb-10">
                <h2 class="my-1 text-xl font-bold">Filter By Month</h2>
                <input type="month" name="month" class="p-2 bg-gray-200 my-1 rounded-lg border-2 border-gray-300">
                <input type="submit" value="search" class="p-2 bg-blue-500 text-white font-bold my-1 rounded-lg hover:bg-blue-400">
            </form>
           
            <div class="text-center mt-6">
                <a href="/clients/statementList" class="bg-blue-500 hover:bg-blue-400 text-white font-bold p-2 rounded-lg text-xl">Reset Filters</a>
            </div>
        </div>

        <section class="my-8 flex flex-col items-center">
            <% incomes.forEach(i => { %>
                <div class="bg-green-300 p-8 my-3 rounded-lg flex justify-between mx-auto text-xl w-full">
                    <h2 class="font-bold mr-5"><%= i.incname %></h2>
                    <h2 class="font-bold mr-5"><%= i.amount %></h2>
                    <a href="/income/<%= i.id %>" class="p-2 bg-blue-700 text-white font-bold hover:bg-blue-600 rounded-lg">Show Details</a>
                </div>
                
            <% }) %>
            <% expenses.forEach(i => { %>
                <div class="bg-red-300 p-8 my-3 mx-auto rounded-lg flex justify-between text-xl w-full">
                    <h2 class="font-bold"><%= i.expname %></h2>
                    <h2 class="font-bold"><%= i.amount %></h2>
                    <a href="/expense/<%= i.id %>" class="p-2 bg-blue-700 text-white font-bold hover:bg-blue-600 rounded-lg">Show Details</a>
                </div>
                
            <% }) %>
            <% if(balance) {%>
                <h2 class="text-4xl font-bold text-center mt-8">Savings from the Search results: <span class="text-red-500"><%= balance %></span></h2>
            <% } %>
            <% if((expenses.length) === 0 && (incomes.length === 0)) { %>
                <h1 class="text-center text-3xl font-bold">No Records Available</h1>
            <% } %>
        </section>
    </section>
    
</main>

<%- include('partials/footer') %>
