<%- include('partials/header') -%>

<main>
    <section class="h-custom flex flex-col items-center w-1/3 mx-auto justify-center mb-20">
        <form action="/users/login/resetpassword" method="POST" class="flex flex-col p-8 border-2 border-gray-300 rounded-lg w-custom">
            <% if(error) { %>
                <legend class="text-red-500 font-bold"><%= error %></legend>
            <%} %>
            <input type="password" name="newPasswd1" placeholder="Enter new Password" class="p-3 bg-gray-200 my-2 rounded-lg border-2 border-gray-300">
            <input type="password" name="newPasswd2" placeholder="Enter the Password again" class="p-3 bg-gray-200 my-2 rounded-lg border-2 border-gray-300">
            <input type="submit" value="Reset Password"  class="p-3 bg-blue-500 text-white font-bold my-2 rounded-lg hover:bg-blue-400">
        </form>
    </section>
</main>


<%- include('partials/footer') -%>
