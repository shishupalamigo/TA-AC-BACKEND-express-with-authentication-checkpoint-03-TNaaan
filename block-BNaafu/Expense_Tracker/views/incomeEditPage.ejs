
 <%- include('partials/header') %>
 <main>
     <section class="h-custom flex flex-col items-center w-1/3 mx-auto justify-center">
         <form action="/income/<%= income.id %>" method="POST" class="flex flex-col p-8 border-2 border-gray-300 rounded-lg w-custom">
             <input type="text" name="incname" placeholder="Enter Income Name" class="p-3 bg-gray-200 my-2 rounded-lg border-2 border-gray-300" value="<%= income.incname %>">
             <input type="text" name="sources" placeholder="Enter the Income Source" class="p-3 bg-gray-200 my-2 rounded-lg border-2 border-gray-300" value="<%= income.sources %>">
             <input type="number" name="amount" placeholder="Amount" class="p-3 bg-gray-200 my-2 rounded-lg border-2 border-gray-300" value="<%= income.amount %>">
             <input type="date" name="date" class="p-3 bg-gray-200 my-2 rounded-lg border-2 border-gray-300">
             <input type="submit" value="Update Income"  class="p-3 bg-blue-500 text-white font-bold my-2 rounded-lg hover:bg-blue-400">
         </form>
     </section>
 </main>

 <%- include('partials/footer') %>
