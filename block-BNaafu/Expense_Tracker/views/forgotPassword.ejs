<%- include('partials/header') -%>

<main>
    <section class="h-custom flex flex-col items-center w-1/3 mx-auto justify-center mb-20">
        <form action="/users/login/forgotpassword", method="POST"  class="flex flex-col p-8 border-2 border-gray-300 rounded-lg w-custom">
            <legend class="text-xl text-blue-700 font-bold my-2">Please Enter your registered Email</legend>
            <% if(error) { %>
                <h3 class="text-red-500 font-bold"><%= error %></h3>
            <% } %>
            <% if(info) { %>
                <h3 class="text-green-500 font-bold"><%= info %></h3>
            <% } %>
            <input type="email" name="email" placeholder="Enter Email" class="p-3 bg-gray-200 my-2 rounded-lg border-2 border-gray-300">
            <input type="submit" value="Send Verification Code" class="p-3 bg-blue-500 text-white font-bold my-2 rounded-lg hover:bg-blue-400">
        </form>
    </section>
</main>
<%- include('partials/footer') -%>
